
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Profile:</h3>

    <form class="form new-profile-form">
      <div class="form-group">
        <label for="profile-name">profile name:</label>
        <input class="form-input" type="text" id="profile-name" name="profile-name" />
      </div>
      <div class="form-group">
        <label for="profile-funding">worth ($):</label>
        <input class="form-input" type="number" id="profile-funding" name="profile-funding" />
      </div>
      <div class="form-group">
        <label for="profile-desc">email:</label>
        <textarea class="form-input" id="text" name="profile-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  
  <div class="col-md-6 profile-list">
    <h3>Current profiles:</h3>

  
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/profile/{{profile.id}}">{{profile.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{profile.id}}">DELETE</button>
      </div>
    </div>

</div> 
<div>
  <h1>Welcome, {{username}}!</h1>
  
  <p>Select your 3D printer:</p>
  
  <form action="/add-printer" method="post">
    <select name="printer">
      {{#each Printer}}
        <option value="{{name}}">{{name}} ({{manufacturer}} {{model}})</option>
      {{/each}}
    </select>
    <button type="submit">Save Printer</button>
  </form>

  <p>Your current printer: {{selectedPrinter}}</p>
  </div>
<script src="./js/profile.js"></script>